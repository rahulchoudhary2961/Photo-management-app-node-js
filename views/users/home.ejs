<% include('../layouts/header.ejs')%>




<div style="border:2px solid black ; width:50%; margin-left: 19%; height: 70%;">
    <h1 style="margin-left:28%;">User Details</h1>
<table width="50%" style="margin-left: 20%;">
    <tr>
        <td><img src="userImages/<%= user.image%>" alt="<%= user.image%>" style="border-radius: 90px;"></td>
        <td>
            <button><a href="/delete/<%= user._id%>" style="text-decoration: none; color: rgb(8, 7, 7);">Delete Image</a></button>
        </td>
        
    </tr>
   <div style="margin-top:10%;">
    <tr >
        <td style="padding: 10px;">Name</td>
        <td><%= user.name %></td>
    </tr>
    <tr>
        <td style="padding: 10px;">Email</td>
        <td><%= user.email %></td>
    </tr>
    <tr>
        <td style="padding: 10px;">Mobile</td>
        <td><%= user.mobile %></td>
    </tr>
   </div>
</table>
<button style="margin-left: 40%;"><a href="/logout" style="text-decoration: none; color: black">Logout</a></button>
</div>



<% include('../layouts/footer.ejs')%>